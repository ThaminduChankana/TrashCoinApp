<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.householdDisposer.HouseholdwasteUpdate">

    <TextView
        android:id="@+id/txt_wasteUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="60dp"
        android:text="Update Waste Details"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:text="What is type of waste you have?"
        android:textColor="#151515"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/chk_plastic"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textView"
        android:layout_marginStart="44dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="68dp"
        android:text="Plastic Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/chk_paper"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_below="@+id/chk_plastic"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="68dp"
        android:text="Paper Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/chk_metal"
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="68dp"
        android:text="Metal Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/chk_paper"
         />

    <CheckBox
        android:id="@+id/chk_aluminium"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="66dp"
        android:text="Aluminium Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/chk_metal"
         />

    <CheckBox
        android:id="@+id/chk_cardboard"
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="68dp"
        android:text="Cardboard Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/chk_aluminium"
      />



    <EditText
        android:id="@+id/edt_Name"
        android:layout_width="346dp"
        android:layout_height="49dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="20sp"
        android:layout_below="@+id/chk_cardboard"
        />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="345dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Phone"
        android:textSize="20sp"
        android:layout_below="@+id/edt_Name"
         />

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="343dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Address"
        android:textSize="20sp"
        android:layout_below="@+id/edt_phone"
       />


        <ImageView
            android:id="@+id/btn_back5"
            android:layout_width="44dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/img_btn_back" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:layout_below="@+id/edt_address"
        android:layout_marginStart="128dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="#4CAF50"
        android:text="Update"
        android:textColor="#0C0C0C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_100ssp" />





    <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_disposer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="675dp"
                android:background="@color/btn_color"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/bottom_nav_disposer_menu" />



</RelativeLayout>