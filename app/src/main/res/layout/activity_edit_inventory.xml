<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EditInventory">

    <TextView
        android:id="@+id/tv_edit_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/tv_edit_inventory"
        android:textAlignment="center"
        android:textColor="@color/heading"

        android:textSize="40sp" />
    <ImageView
        android:id="@+id/img_edit_inventory_back"
        android:layout_below="@id/tv_edit_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/img_btn_back" />

    <ImageView
        android:id="@+id/img_edit_inventory"
        android:layout_below="@id/img_edit_inventory_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/img_edit_inventory" />

    <LinearLayout
        android:id="@+id/ll_edit_inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_edit_inventory"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <EditText
            android:id="@+id/et_edit_inventory_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:ems="10"
            android:hint="@string/et_item_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="textStart"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/et_edit_inventory_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"

            android:ems="10"
            android:hint="@string/et_description"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="textStart"
            tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_inventory"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_edit_inventory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/btn_color"
        android:text="@string/btn_edit_item"
        app:cornerRadius="50dp"
        tools:ignore="DuplicateSpeakableTextCheck" />

</RelativeLayout>