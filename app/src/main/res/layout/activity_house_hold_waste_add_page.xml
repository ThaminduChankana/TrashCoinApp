<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HouseHoldWasteAddPage">

    <TextView
        android:id="@+id/txt_Board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="115dp"
        android:text="Welcome On Board"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="834dp"
        android:layout_height="196dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/household_disposer_pic_one" />

    <Button
        android:id="@+id/btn_timetable2"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="420dp"
        android:backgroundTint="#4CAF50"
        android:text="Timetable"
        android:textColor="#191818"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_100ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_moredetails"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="420dp"
        android:backgroundTint="#4CAF50"
        android:text="More Details"
        android:textColor="#151515"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_100ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_timetable2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="171dp"
        android:text="What is type of waste you have?"
        android:textColor="#151515"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_timetable2" />

    <CheckBox
        android:id="@+id/chk_plastic"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="66dp"
        android:text="Plastic Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/chk_paper"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="72dp"
        android:text="Paper Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk_plastic" />

    <CheckBox
        android:id="@+id/chk_metal"
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="68dp"
        android:text="Metal Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk_paper" />

    <CheckBox
        android:id="@+id/chk_aluminium"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="66dp"
        android:text="Aluminium Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk_metal" />

    <CheckBox
        android:id="@+id/chk_cardboard"
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="68dp"
        android:text="Cardboard Waste"
        android:textColor="#6A6767"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk_aluminium" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="#4CAF50"
        android:text="Next"
        android:textColor="#222121"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_100ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk_cardboard" />

</androidx.constraintlayout.widget.ConstraintLayout>