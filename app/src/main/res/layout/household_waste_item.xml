<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:id="@+id/idCVhousewasteItem"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#DEEADE"
        app:cardBackgroundColor="#D1CBCB"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:backgroundTint="#DACDCD"
            android:orientation="vertical"
            android:outlineSpotShadowColor="#272525"
            android:padding="4dp"
            android:id="@+id/linearLayout">

            <!--Textview for displaying our Course Name-->

            <!--Textview for displaying our Course Duration-->
            <TextView
                android:id="@+id/idTVName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="36dp"
                tools:layout_editor_absoluteY="11dp"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_conversion_absoluteWidth="382dp" />

            <TextView
                android:id="@+id/idTVPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Phone"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="26dp"
                tools:layout_editor_absoluteY="47dp"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_conversion_absoluteWidth="382dp" />

            <!--Textview for displaying our Course Description-->
            <TextView
                android:id="@+id/idTVAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="26dp"
                tools:layout_editor_absoluteY="73dp"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_conversion_absoluteWidth="382dp" />

            <TextView
                android:id="@+id/idTVWasteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Waste"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="26dp"
                tools:layout_editor_absoluteY="98dp"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_conversion_absoluteWidth="382dp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F1584C"
                android:text="Delete"
                android:textColor="#101010"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_100ssp"
                tools:layout_conversion_absoluteHeight="48dp"
                tools:layout_editor_absoluteY="124dp"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_conversion_absoluteWidth="97dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>