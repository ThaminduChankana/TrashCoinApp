<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activities.cart.SingleProductActivity">


    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="151dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/heading"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_product_view"
        android:layout_width="165dp"
        android:layout_height="122dp"
        android:layout_below="@+id/tv_product_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="36dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/ic_photo" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="145dp"
        android:layout_height="58dp"
        android:layout_below="@+id/img_product_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="73dp"
        android:text="@string/tv_category"
        android:textColor="#037d50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_product_category"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_product_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="73dp"
        android:background="#00000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/et_category" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="145dp"
        android:layout_height="57dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/tv_description"
        android:textColor="#037d50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_product_description"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_category"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="73dp"
        android:background="#00000000"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text="@string/et_product_description"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="21dp"
        android:text="@string/tv_price"
        android:textColor="#037d50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_product_price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_description"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="73dp"
        android:background="#00000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/et_price" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="138dp"
        android:layout_height="53dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/tv_discount"
        android:textColor="#037d50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_product_discount_note"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_price"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="70dp"
        android:background="#00000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/et_discount" />

    <FrameLayout
        android:id="@+id/btm_nav_disposer_container"
        android:layout_width="match_parent"
        android:layout_height="601dp"
        android:layout_above="@id/bottom_navigation_disposer"
        android:layout_marginBottom="2dp" >

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_disposer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/btn_color"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_disposer_menu" />
</RelativeLayout>