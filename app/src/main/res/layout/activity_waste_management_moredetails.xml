<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.householdDisposer.WasteManagementMoredetails">

    <TextView
        android:id="@+id/txt_more"
        android:layout_width="369dp"
        android:layout_height="57dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/txt_more"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnbacktotimetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_more"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/img_btn_back" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/btnbacktotimetable"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/moredetails" />


    <TextView
        android:id="@+id/txt_moredetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/imageView8"
        android:layout_marginTop="20dp"
        android:text="@string/tv_man_01"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_more2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/txt_moredetails"
        android:text="@string/tv_man_02"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_more3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/txt_more2"
        android:text="@string/tv_man_03"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_more4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/tv_man_04"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/txt_more3"
       />

    <TextView
        android:id="@+id/txt_more5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/tv_man_05"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/txt_more4"
         />

    <TextView
        android:id="@+id/txt_more6"
        android:layout_below="@+id/txt_more5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/tv_man_06"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_more7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/tv_man_07"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/txt_more6"
         />

    <TextView
        android:id="@+id/txt_more8"
        android:layout_below="@+id/txt_more7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="@string/tv_url"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>